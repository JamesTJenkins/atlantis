cpp_naming_style.pascal_case.required_prefix =
cpp_naming_style.pascal_case.required_suffix =
cpp_naming_style.pascal_case.word_separator =
cpp_naming_style.pascal_case.capitalization = pascal_case

cpp_naming_style.camel_case.required_prefix =
cpp_naming_style.camel_case.required_suffix =
cpp_naming_style.camel_case.word_separator =
cpp_naming_style.camel_case.capitalization = camel_case

