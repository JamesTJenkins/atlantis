# Remove the line below if you want to inherit .editorconfig settings from higher directories
root = true

# C++ files
[*.cpp]
[*.hpp]
[*.h]

#### Core EditorConfig Options ####

# Indentation and spacing
indent_size = 4
indent_style = tab
tab_width = 4

# New line preferences
end_of_line = lf
insert_final_newline = true

#### C++ Coding Conventions ####

# Naming conventions
# Classes, structs, enums, and typedefs should be in PascalCase
# Functions and variables should be in camelCase

# Indentation preferences
c_indent_brace_level = true
c_indent_case_contents = true
c_indent_case_labels = true
c_indent_namespace_contents = true
c_indent_switch_labels = true

# Space preferences
c_space_after_cast = false
c_space_after_comma = true
c_space_after_semicolon = true
c_space_around_assignments = true
c_space_around_binary_operators = true
c_space_around_ternary_operators = true
c_space_before_semicolon = false
c_space_between_function_decl_empty_parentheses = false
c_space_between_function_decl_parentheses = false
c_space_between_function_call_empty_parentheses = false
c_space_between_function_call_parentheses = false
c_space_between_parentheses = false
c_space_between_square_brackets = false
c_space_inside_braces = false
c_space_inside_parentheses = false
c_space_inside_square_brackets = false

# Wrapping preferences
c_keep_one_liners = true

# Brace style
c_brace_on_same_line = true

# New line preferences
c_new_line_before_open_brace = all
c_new_line_between_query_expression_clauses = true

#### Naming styles ####

# Naming rules
cpp_naming_rule.classes_should_be_pascal_case.severity = suggestion
cpp_naming_rule.classes_should_be_pascal_case.symbols = class, struct, enum, typedef
cpp_naming_rule.classes_should_be_pascal_case.style = pascal_case

cpp_naming_rule.functions_should_be_camel_case.severity = suggestion
cpp_naming_rule.functions_should_be_camel_case.symbols = function
cpp_naming_rule.functions_should_be_camel_case.style = camel_case

cpp_naming_rule.variables_should_be_camel_case.severity = suggestion
cpp_naming_rule.variables_should_be_camel_case.symbols = variable
cpp_naming_rule.variables_should_be_camel_case.style = camel_case

# Symbol specifications
cpp_naming_symbols.class.applicable_kinds = class, struct, enum, typedef
cpp_naming_symbols.class.applicable_accessibilities = public, protected, private
cpp_naming_symbols.class.required_modifiers =

cpp_naming_symbols.function.applicable_kinds = function
